{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "fileSuggestion": {
    "type": "command",
    "command": "~/.dotfiles/.claude-global/file-suggestion.sh"
  },
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm exec:*)",
      "Bash(npx:*)",
      "Bash(pnpm run:*)",
      "Bash(pnpm test:*)",
      "Bash(pnpm exec:*)",
      "Bash(pnpm dlx:*)",
      "Bash(yarn run:*)",
      "Bash(yarn test:*)",
      "Bash(yarn dlx:*)",
      "Bash(make:*)",
      "Bash(go test:*)",
      "Bash(go build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo build:*)",
      "Bash(cargo check:*)",
      "Bash(pytest:*)",
      "Bash(python -m pytest:*)",
      "Bash(bundle exec:*)",
      "Bash(rails test:*)",
      "Bash(rspec:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(git branch:*)",
      "Bash(git show:*)",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(tree:*)",
      "Bash(wc:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(diff:*)",
      "Bash(jq:*)",
      "Bash(yq:*)",
      "Bash(cat package.json)",
      "Bash(cat Cargo.toml)",
      "Bash(cat go.mod)",
      "Bash(cat Gemfile)",
      "Bash(cat pyproject.toml)",
      "Bash(cat requirements.txt)",
      "Task(Explore)",
      "Task(Plan)",
      "Skill",
      "mcp__deepwiki-http__*",
      "mcp__gitlab__*",
      "mcp__serena__*",
      "Read(~/.claude/skills/**/*)",
      "Read(~/.dotfiles/.claude-global/skills/**/*)",
      "Read(.claude/skills/**/*)",
      "Bash(~/.dotfiles/.claude-global/skills/**/*.sh:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Read(**/*.p12)",
      "Read(**/*.pfx)",
      "Read(**/*.crt)",
      "Read(**/credentials*)",
      "Read(**/.ssh/*)",
      "Read(**/*.secret)",
      "Read(**/*secret*)",
      "Read(**/.netrc)",
      "Read(**/.npmrc)",
      "Read(**/.pypirc)",
      "Read(**/secrets/**)",
      "Read(**/private/**)",
      "Bash(wget:*)",
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Bash(chmod 777:*)",
      "Bash(ssh:*)",
      "Bash(scp:*)"
    ],
    "ask": [
      "Bash(curl:*)",
      "Bash(git push:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git checkout -- :*)",
      "Bash(git restore:*)",
      "Bash(rm:*)",
      "Bash(rmtrash:*)",
      "Bash(brew install:*)",
      "Bash(npm publish:*)",
      "Bash(docker:*)",
      "Bash(kubectl:*)",
      "Bash(agent:*)",
      "Bash(cursor agent:*)"
    ],
    "defaultMode": "default"
  },
  "statusLine": {
    "type": "command",
    "command": "~/.dotfiles/.claude-global/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "example-skills@anthropic-agent-skills": false,
    "code-simplifier@claude-plugins-official": true,
    "swift-lsp@claude-plugins-official": true
  },
  "language": "japanese",
  "spinnerTipsEnabled": false,
  "promptSuggestionEnabled": false
}
