{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "title": "Tasks",
  "description": "Claude Code project task management schema",
  "type": "object",
  "required": ["version", "tasks"],
  "properties": {
    "version": {
      "type": "string",
      "const": "1.0",
      "description": "Schema version"
    },
    "tasks": {
      "type": "array",
      "description": "Array of tasks",
      "items": {
        "$ref": "#/definitions/task"
      }
    }
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["id", "title", "status", "createdAt"],
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[0-9a-f]{8}$",
          "description": "8-character hexadecimal task ID"
        },
        "title": {
          "type": "string",
          "maxLength": 200,
          "description": "Task title"
        },
        "status": {
          "type": "string",
          "enum": ["pending", "in_progress", "completed"],
          "description": "Current task status"
        },
        "type": {
          "type": "string",
          "enum": ["bug", "feature", "refactor", "review", "docs", "test"],
          "description": "Optional task type"
        },
        "description": {
          "type": "string",
          "description": "Optional detailed description"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 creation timestamp"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 last update timestamp"
        },
        "completedAt": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 completion timestamp"
        }
      }
    }
  }
}
