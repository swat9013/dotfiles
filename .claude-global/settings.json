{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "fileSuggestion": {
    "type": "command",
    "command": "~/.dotfiles/.claude-global/file-suggestion.sh"
  },
  "env": {
    "ENABLE_TOOL_SEARCH": "true",
    "CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR": "1"
  },
  "permissions": {
    "allow": [
      "Bash(npm run:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git status)",
      "Bash(ls:*)",
      "Bash(grep:*)"
    ],
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(**/.env)",
      "Read(**/*.key)",
      "Bash(wget:*)"
    ],
    "ask": [
      "Bash(curl:*)",
      "Bash(git push:*)",
      "Bash(rm:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "~/.dotfiles/.claude-global/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "claude-mem@thedotmack": true,
    "example-skills@anthropic-agent-skills": true
  },
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "language": "japanese"
}
