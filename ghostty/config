# テーマ
theme = TokyoNight Night

# フォント
font-size = 12

# macOS固有
macos-titlebar-style = transparent
macos-option-as-alt = true

# ウィンドウ
window-padding-x = 8
window-padding-y = 8
unfocused-split-opacity = 0.80

# パフォーマンス（Emacs等のTUIアプリでのフリーズ対策）
window-vsync = false
scrollback-limit = 100000

# シェル統合
shell-integration = detect
shell-integration-features = cursor,sudo,title

# セッション復元（タブ・スプリットのレイアウトを保存）
window-save-state = always

# デスクトップ通知（OSC 9/777対応）
desktop-notifications = true

# スプリット移動（矢印キー）
keybind = shift+left=goto_split:left
keybind = shift+right=goto_split:right
keybind = shift+up=goto_split:up
keybind = shift+down=goto_split:down

# スプリット移動（Emacs風: n=down, p=up, b=left, f=right）
keybind = ctrl+shift+b=goto_split:left
keybind = ctrl+shift+f=goto_split:right
keybind = ctrl+shift+p=goto_split:up
keybind = ctrl+shift+n=goto_split:down
