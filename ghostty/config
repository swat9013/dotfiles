# テーマ（ライト/ダーク自動切り替え）
theme = light:Catppuccin Latte,dark:Catppuccin Mocha

# フォント
font-size = 12

# macOS固有
macos-titlebar-style = transparent

# ウィンドウ
window-padding-x = 8
window-padding-y = 8
unfocused-split-opacity = 0.95

# シェル統合
shell-integration = detect

# スプリット移動（矢印キー）
keybind = ctrl+shift+left=goto_split:left
keybind = ctrl+shift+right=goto_split:right
keybind = ctrl+shift+up=goto_split:up
keybind = ctrl+shift+down=goto_split:down

# スプリット移動（Emacs風: n=down, p=up, b=left, f=right）
keybind = ctrl+shift+b=goto_split:left
keybind = ctrl+shift+f=goto_split:right
keybind = ctrl+shift+p=goto_split:up
keybind = ctrl+shift+n=goto_split:down
